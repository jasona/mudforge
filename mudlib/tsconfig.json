{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@std": ["./std/index.js"],
      "@std/*": ["./std/*"],
      "@lib": ["./lib/index.js"],
      "@lib/*": ["./lib/*"]
    }
  },
  "include": ["**/*.ts", "efuns.d.ts"],
  "exclude": ["node_modules"]
}
