{
  "name": "mudforge-driver",
  "version": "0.1.0",
  "description": "A modern MUD (Multi-User Dungeon) driver inspired by LDMud, built with Node.js and TypeScript. Features sandboxed script execution, hot-reload, and WebSocket-based web client.",
  "type": "module",
  "main": "dist/driver/index.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:client": "esbuild src/client/index.ts --bundle --outfile=dist/client/client.js --sourcemap && node -e \"require('fs').cpSync('src/client/index.html', 'dist/client/index.html')\" && node -e \"require('fs').cpSync('src/client/styles.css', 'dist/client/styles.css')\"",
    "dev": "tsx watch --ignore ./mudlib/** src/driver/index.ts",
    "start": "node dist/driver/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasona/mudforge.git"
  },
  "keywords": [
    "mud",
    "game",
    "driver",
    "websocket",
    "typescript",
    "sandbox"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasona/mudforge/issues"
  },
  "homepage": "https://github.com/jasona/mudforge#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "fastify": "^5.6.2",
    "isolated-vm": "^6.0.2",
    "pino": "^10.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.4.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
